<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">
     <TextView 
          android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Feeder 1" 
        android:id="@+id/feederId3"
        android:textColor="@android:color/black"/> 
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="3dp" 
      android:layout_marginLeft="3dp" 
        android:layout_marginTop="30dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="Feeder Name" 
        android:textColor="@android:color/black"/>

   <EditText
     android:id="@+id/feedername"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:inputType="text"
     android:ems="10" 
     android:gravity="center"
      />
       
</LinearLayout>
  
    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="3dp" 
      android:layout_marginLeft="3dp" 
      android:layout_gravity="center"
      android:orientation="horizontal">

    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1.KG.Disp.Time" 
        android:textColor="@android:color/black"/>

   <EditText
     android:id="@+id/okdtime"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_weight="0.5"
     android:gravity="center"
     android:inputType="number"
      />
     <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        
        android:textSize="15sp"
        android:text="    sec" 
        android:textColor="@android:color/black"/> 
  
</LinearLayout> 
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="3dp" 
      android:layout_marginLeft="3dp" 
      android:layout_marginTop="5dp"
      android:layout_gravity="center"
      android:orientation="horizontal">

     <CheckBox
         android:id="@+id/basic_mode"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Basic Mode" />

     <CheckBox
         android:id="@+id/schedule_mode"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Schedule Mode" />
      
    </LinearLayout>
   <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="5dp"
    android:background="#a4a4a4"/> 
    
    <Button
        android:id="@+id/update_settings"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_margin="5dp" 
        android:text="Update"
        android:background="@drawable/rounded_green" 
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@android:color/white"/>
  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
          
    android:background="#a4a4a4"/>

  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="3dp" 
      android:layout_marginLeft="3dp" 
      android:gravity="center"
      android:layout_marginTop="15dp"
      android:orientation="horizontal">
     
 
  <TextView    
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp" 
        android:layout_marginLeft="10dp" 
        android:textSize="15sp"
        android:text="Stop" 
        android:id="@+id/tvstatus"
        android:visibility="invisible"
        android:textColor="@android:color/black"/> 
 </LinearLayout>
 </LinearLayout>
</LinearLayout>
