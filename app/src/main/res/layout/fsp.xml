<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add FSP"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Email Address"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mobile Number"
                android:id="@+id/textView12" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="College Name"
                android:id="@+id/textView13" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText8" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select Course"
        android:id="@+id/textView14" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select Course"
        android:id="@+id/textView15" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select State"
        android:id="@+id/textView16" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:layout_gravity="center_horizontal" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select City"
        android:id="@+id/textView17" />



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner6"
        android:layout_gravity="right" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tell us the two reasons why you want to be Fest Samachar student Program:"
        android:id="@+id/textView18" />


    <EditText android:id="@+id/EditText02" android:layout_width="120dp"
        android:layout_height="wrap_content" android:lines="5" android:layout_centerInParent="true"
        android:gravity="top|left" android:inputType="textMultiLine"
        android:scrollHorizontally="false" android:minWidth="10.0dip"
        android:maxWidth="180dip" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tell us atleast three things you would do as a Fest Samachar Student Partner in your campus:"
        android:id="@+id/textView19" />
    <EditText android:id="@+id/EditText03" android:layout_width="120dp"
        android:layout_height="wrap_content" android:lines="5" android:layout_centerInParent="true"
        android:gravity="top|left" android:inputType="textMultiLine"
        android:scrollHorizontally="false" android:minWidth="10.0dip"
        android:maxWidth="180dip" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Are you a member of any organization in your college or university. Explain in detail:"
        android:id="@+id/textView20" />
    <EditText android:id="@+id/EditText04" android:layout_width="120dp"
        android:layout_height="wrap_content" android:lines="5" android:layout_centerInParent="true"
        android:gravity="top|left" android:inputType="textMultiLine"
        android:scrollHorizontally="false" android:minWidth="10.0dip"
        android:maxWidth="180dip" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Have you organized any fests?:"
        android:id="@+id/textView21" />
    <EditText android:id="@+id/EditText05" android:layout_width="120dp"
        android:layout_height="wrap_content" android:lines="5" android:layout_centerInParent="true"
        android:gravity="top|left" android:inputType="textMultiLine"
        android:scrollHorizontally="false" android:minWidth="10.0dip"
        android:maxWidth="180dip" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Have you used festsamachar.com before?:"
        android:id="@+id/textView22" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true"
            android:id="@+id/radioButton"
            android:layout_gravity="right" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no"
        android:id="@+id/radioButton2"
        android:checked="false" />


        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal" />
        </LinearLayout>
</ScrollView>
